<% if current_admin.god_mode?%>
<div class="row">

	<h2>Últimas órdenes</h2>


	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<th>Orden Id</th>
					<th>Subtotal</th>
					<th>Status</th>
					<th>Cliente Id</th>
					<th>Nombre</th>
					<th>Apellido</th>
					<th>Pedido</th>
					<th>Case</th>
					<th>Acción</th>
				</thead>
				<tbody>
					
					<% @orders.each do |o|%>

						<% if o.user_id && o.picture_for_custom %>
							<tr>
								<td><%=o.id%></td>
								<td><%=o.subtotal%></td>
								<td><%=o.order_status.name%></td>
								<td><%=o.user_id%></td>
								<td><%=o.user.name%></td>
								<td><%=o.user.last_name%></td>
								<td><%=o.picture_for_custom.phonetype.modelName %> <%=o.picture_for_custom.phonetype.type_of_case %></td>
								<td><%=image_tag o.picture_for_custom.picture((:thumb)) %></td>
								<td><a href="" class="btn btn-success">Editar</a></td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>


</div>
<%end%>





<div class="modal fade" id="crearDisenador" >
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Crear nuevo Diseñador</h4>
			</div>
			<div class="modal-body">
				<%= bootstrap_form_for [:admin, @designer] , validate: true do |f| %>

				<div id="error_explanation"  style="display:none;"></div>

				<%= f.text_field :name, label:"Nombre", placeholder: "Nombre", autofocus: true %>
				<%= f.text_field :lastname, label:"Apellido", placeholder: "Apellido" %>
				<%= f.text_field :type_Of_Artist, label:"Tipo de Artista", placeholder: "Ilustrador" %>
				<%= f.file_field :avatar %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-pink" data-dismiss="modal">Cerrar</button>
				<%= f.submit "Crear", class: "btn btn-lightBlue" %>

			</div>
			<%end%>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="crearColeccion" >
