<h2><%=@designer.name%> <%= @designer.lastname%> nuevo diseño</h2>
<%= bootstrap_form_for [:admin, @designer, @design] do |f|%>
<div class="row">
<div class="col-md-7">
	<%= f.text_field :name %>
</div>
<div class="col-md-7">
<%= f.file_field :picture%>
<!-- 	<input type="text" placeholder="imagen" name="design_picture" id="design_picture"> -->
</div>
<div class="col-md-7">
	<%= f.select :collection_id, @collections %>
</div>

<div class="col-md-6">
<a href="javascript:history.back()" class="btn btn-pink">Cancelar</a>
<%= f.submit "Guardar diseño", class: "btn btn-lightBlue" %>
</div>
</div>
<%end%>
