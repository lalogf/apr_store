



<div class="container">
	<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		
		<ol class="carousel-indicators">
			<% @banners.each_with_index do |banner, x| %>
				<% if banner.principal == true %>
				<li data-target="#carousel-example-generic" data-slide-to="<%=x%>" class="active"></li>
				<% else %>
				<li data-target="#carousel-example-generic" data-slide-to="<%=x%>"></li>
				<% end %>
			<% end %>
		</ol> 
		<!-- Wrapper for slides -->

		<div class="carousel-inner" role="listbox">
			<% @banners.each do |banner|%>
			<% if banner.principal == true %>
			<div class="item active">
				<%= image_tag banner.image.url(:original) %>
			</div>
			<% else%>
			<div class="item">
				<%= image_tag banner.image.url(:original) %>
			</div>
			<% end %>
			<%end%>
		</div>


	</div>

	<!-- Login Modal -->
	<div class="modal fade" id="loginmodal">
		<div class="modal-dialog login-logout">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Inicia sesión</h4>
				</div>
				<div class="modal-body">
					<p>Email</p>
					<input type="email" class="form-control" placeholder="mail@example.com">
					<p>Password</p>
					<input type="password" class="form-control" placeholder="Password">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-primary">Save changes</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->




	<div class="row">
		<h3 class="centered">VER DISEÑOS POR:</h3>
		<div class="col-md-6 col-md-offset-3">
			<a href="#designers"><div class="col-md-5 box" id="designer">DISEÑADOR</div></a>
			<a href="#devices"><div class="col-md-5 box" id="device">EQUIPO</div></a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2" id="designers">
		<% @designers.each do |designer|%>
			<a href="#cases"><div class="col-md-3 box showcases" id="<%=designer.id%>"><%= designer.name %> <%= designer.lastname%></div></a>
		<% end %>
		</div>
		<div class="col-md-8 col-md-offset-2" id="devices">


			<% @products.each do |prod| %>
				<% prod.products.each do |pr|%>
					<a href="#cases"><div class="col-md-3 box showcases"><%= pr.phonetype.modelName %></div></a>
					
					<%end%>
			<% end %>
				

			
		</div>
	</div>

	<%@designers.each do |designer|%>
		<div class="container">
			<div class="row cases" id="cases<%=designer.id%>">
				<% designer.designs.each do |design| %>
				<% design.products.each do |product| %>
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
						<%= image_tag product.picture.url(:medium) %>
						<div class="caption">
							<h3><%= product.title%></h3>
							<p>	Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
								tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
								quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
								consequat.</p>
								<p class="centered"><a href="#" class="btn btn-primary" role="button">Comprar</a></p>
							</div>
						</div>
					</div>
					<%end%>
					<%end%>
				</div>
		</div>
	<% end %>
</div>


