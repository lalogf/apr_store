<!DOCTYPE html>
<html>
<head>
	<title>Espacioc</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

</head>
<body>
<% if admin_signed_in? %>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/admin">Admin console</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li><a href="/admin/collections">Colecciones</a></li>
					<li><a href="/admin/designers">Diseñadores</a></li>
					<li><a href="/admin/designs">Diseños</a></li>
					<li><a href="/admin/banners">Banners</a></li>
					<li><a href="/admin/case_inventories">Inventario</a></li>

				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to current_admin.email, edit_admin_registration_path %></li>
					<li><%= link_to "Cerrar sesión admin", destroy_admin_session_path, method: :delete %></li>
				</ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
	<% else %>
		<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/admin">Admin console</a>
			</div>
		</div><!-- /.container-fluid -->
	</nav>
	<%end%>

	<% if flash[:notice].present? %>
	<div class="container text-center alert alert-primary">
		<%= flash[:notice] %>
	</div>
	<% end %>

	<% if flash[:alert].present? %>
	<div class="container text-center alert alert-warning">
		<%= flash[:alert] %>
	</div>
	<% end %>

	<% if flash[:success].present? %>
	<div class="container text-center alert alert-success">
		<%= flash[:success] %>
	</div>
	<%end%>
	<% if flash[:error].present? %>
	<div class="container text-center alert alert-danger">
		<%= flash[:error] %>
	</div>
	<% end %>

	<div class="container">
		<%= yield %>
	</div>
	<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>
</html>
