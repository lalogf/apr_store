<div class="container" id="crea_case">
	<div class="row">
		<div class="col-md-3 desktop">
			<img id="logo" src="/assets/logo_arteaparte.png" class="pull-left">
			<div class="col-md-12">
				<%= link_to '< Regresar', root_path %>
				<p id="mensaje_ayuda" style="display:none"> Intenta cubrir hasta la líneas punteadas</p>
			</div>
			
		</div>
		<div class="supercenter col-md-6 col-sm-12" >
			<canvas id="c"></canvas>
		</div>
		<div class="col-md-3 price_and_button">
			<h1 class="custom_price">S/. 90</h1>
			<a href="#" class="btn btn-lightBlue" id="generar2" style="display:none"> Generar </a>
			<%= bootstrap_form_for @picture do |f|%>
			<%= hidden_field_tag 'picture_url'%>
			<%= hidden_field_tag 'phone_type_name', '5'%>
			<%= hidden_field_tag 'image_to_print'%>
			<%= f.submit "Continuar", class: "btn btn-green margin-20", id: "generar" %>
			<% end %>
		</div>
	</div>
</div>
<div style="bottom:8vh;position:fixed;width:100%">
	<div class="col-md-12 myTabs">
		<div class="col-md-12 myTabs">
			<div class="tab-content">
				<div class="tab-pane fade in active" id="A" >
					<div class="margin-10 tab-center">
						<h4 class="century-bold subtitle">Sube una imagen</h4>
						<form id="my-form">
							<input type="hidden" role="uploadcare-uploader" data-crop="disabled" data-preview-step="true" data-images-only="true"/>
						<div id="wuju" style="display:inline">
						</div>
						</form>
					</div>
				</div>
				<div class="tab-pane fade" id="B">
					<div class="margin-10 tab-center">
						<h4 class="century-bold subtitle">Selecciona el color que más te guste para el case</h4>
						<% @colors.each do |color|%>
							<div class="color-button" style="background-color:<%= color.color_code%>"></div>
						<% end %>
						<div class="other_color_button"></div>
<!-- 							<div class="col-md-12">
							<p class="margin-10" style="display:inline">Busca otro color:</p><input type="color" id="back_color" class="form-control"  value="#ff0000" style="width:100px;display:inline">
						</div> -->
					</div>
				</div>
				<div class="tab-pane fade desktop" id="C">
					<div class="row" >
						<h4 class="century-bold subtitle">Agrega un texto</h4>
						<div class="margin-10 col-md-4">
							<a id="text_to_canvas" class="btn btn-lightBlue">Agrega un texto</a>
							<a id="remove-text" class="btn btn-red">Eliminar</a>
						</div>
						<div class="col-md-4 margin-10 ">
							<div class="dropdown">
								<button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style="width:300px">
									Fuente
									<span class="caret"></span>
								</button>
								<ul class="dropdown-menu"  id="fontFamilyDropDown"aria-labelledby="dropdownMenu2" style="height:auto;max-height:200px;overflow-x:hidden">
									<% ["Andale Mono","Arial","Arial Black","Arial Narrow","Arial Rounded MT Bold","Avant Garde","Baskerville","Big Caslon","Bodoni MT","Book Antiqua","Calibri","Calisto MT","Cambria","Candara","Century Gothic","Consolas","Copperplate","Courier New","Didot","Futura	","Garamond	","Geneva","Georgia","Gill Sans","Goudy Old Style","Helvetica","Hoefler Text","Impact","Lucida Bright","Lucida Console","Lucida Grande","Lucida Sans Typewriter","Monaco","Optima","Palatino","Papyrus","Perpetua","Rockwell","Rockwell Extra Bold","Segoe UI","Tahoma","Times New Roman","Trebuchet MS","Verdana"].each do |n|%>
									<li><a style="font-family:<%=n%>;font-size:20px"><%= n %></a></li>
									<% end %>
								</ul>
							</div>
						</div>
						<div class="col-md-4 margin-10">
							<% @colors.each do |color|%>
							<div class="color_button2" style="background-color:<%= color.color_code%>"></div>
							<% end %>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="D">
					<h4 class="century-bold subtitle">Selecciona los emojis que quieras</h4>
					<input type="text" id="newtext" style="display:none">
					<div id="emojiskeyboard"></div>
				</div>
				<div class="tab-pane fade" id="E">
					<h4 class="century-bold subtitle">Elige tu equipo</h4>
					<div class="dropdown tab-center">	
							<% Phonetype.all.each do |n|%>
							<div class="phonetype supercenter" style="width:80px;height:80px;border:dashed 2px black;display:inline-block;white-space: normal;padding: 20px 0px; margin:10px"><a href="#" id="<%=n.id%>"><%= n.modelName %> <%= n.type_of_case%></a></div>
							<% end %>
						
					</div>
				</div>
			</div>
		</div>
	</div>
