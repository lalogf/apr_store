<%= render "front_store/navbar" %>
<%= render "front_store/alert_messages" %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">
  <h3 class="century-bold center">Reg√≠strate</h3>
  <div class="row session-box">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-12">
      <p class="century-bold center">Con Facebook</p>
        <%= link_to image_tag("iconos/facebook_white.svg", :border => 0 , style: "height:50px"), user_omniauth_authorize_path(:facebook), class: "col-md-12 supercenter", style: "background-color:#3b5998;border-radius:50px" %>
      </div>
      <div class="col-md-12 margin-20" style="border-top:solid black 1px;padding-top:20px">
      <p class="century-bold center">O con tus datos</p>
       <%= f.text_field :name ,autofocus: true, class: "col-md-12 century form-field", type: "text", placeholder:"Juan", label:"Nombre" %>  
       <%= f.text_field :last_name ,autofocus: true, class: "col-md-12 century form-field", type: "text", placeholder:"Perez", label:"Apellido" %>  
       <%= f.text_field :email, autofocus: false, class: "col-md-12 century form-field", type: "email", placeholder:"juan@perez.com" %>      
       <%= f.password_field :password, autocomplete: "off", class: "col-md-12 century form-field", type: "password", placeholder:"password" %>
     </div>
     <div class=" col-md-12 margin-10">
      <%= render "users/shared/links" %>
    </div>
<br>

     <%= f.submit "Registrate", class: "col-md-4 btn btn-green century uppercase", style:"width:100%"  %> 
  </div>
</div>
</div>
<% end %>
