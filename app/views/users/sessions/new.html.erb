<%= render "front_store/navbar" %>
<%= render "front_store/alert_messages" %>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <h3 class="century-bold center">Inicia sesi√≥n</h3>
  <div class="row session-box">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-12">
      <p class="century-bold center">Con Facebook</p>
        <%= link_to image_tag("iconos/facebook_white.svg", :border => 0 , style: "height:50px;"), user_omniauth_authorize_path(:facebook), class: "col-md-12 supercenter", style: "background-color:#3b5998;border-radius:50px" %>
      </div>

      <div class="col-md-12 margin-20" style="border-top:solid black 1px;padding-top:20px">
      <p class="century-bold center">O con tus datos</p>
       <%= f.text_field :email, class: "col-md-12 century margin-10 form-field", type: "email", placeholder:"email" %>    
       <%= f.password_field :password, autocomplete: "off", class: "col-md-12 century margin-10 form-field", type: "password", placeholder:"password" %>
       <% if devise_mapping.rememberable? -%>
       <div class="field margin-10">
        <%= f.check_box :remember_me , label:"Recordar mi cuenta"%>
      </div>
      <% end -%>
    </div>

    <%= f.submit "Inicio", class: "col-md-4 btn btn-pink century uppercase", style:"width:100%"  %> 
    <br>
    <div class=" col-md-12 margin-10">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
</div>
<% end %>